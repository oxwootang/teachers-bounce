<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Teachers Bounce</title>
    <meta name="description" content="Teachers Bounce">
    <script src="https://aframe.io/releases/0.4.0/aframe.min.js"></script>
  </head>
  <body>
    <script>
      AFRAME.registerComponent('scale-on-mouseenter', {
        schema: {
          to: {default: '2.5 2.5 2.5'}
        },
        init: function () {
          var data = this.data;
          this.el.addEventListener('click', function () {
          this.setAttribute('scale', data.to);
          });
        }
      });
    </script>
    <a-scene>

      <a-assets>
        <img id='wutang' src="/wu-tang-clan-wallpaper-4.jpg">
        <img id='boxTexture' src='https://i.imgur.com/mYmmbrp.jpg'>
        <img id='skyTexture' src='https://cdn.aframe.io/360-image-gallery-boilerplate/img/sechelt.jpg'>
        <img id="groundTexture" src="https://cdn.aframe.io/a-painter/images/floor.jpg">
        <img id='max' src='https://media.licdn.com/mpr/mpr/shrinknp_400_400/AAEAAQAAAAAAAAkDAAAAJDMyY2NlYWYzLWE0MTYtNGMwNi1hZDlhLTVlZWI2ZGMzM2FlMw.jpg'>
        <img id='shambhavi' src='https://media.licdn.com/mpr/mpr/shrinknp_400_400/AAEAAQAAAAAAAAI-AAAAJGE4MWViN2MyLTcwM2ItNDAwMS1hZTMwLThmYjE4MTZmZDAwMQ.jpg'>
        <img id='ken' src='https://media.licdn.com/mpr/mpr/shrinknp_400_400/p/5/000/28e/17a/32059bc.jpg'>
      </a-assets>

      <a-entity geometry='primitive: sphere; radius: 1.5'
        position='0 10 -10'
        material='color: tomato; metalness: 0.7'
        light='type: point; color: tomato'
        sound='src: #rickroll; volume: 0.9'
        physics='boundingRadius: 1.5; mass: 1'
        aggro='100 explode follow-player vibrate'>

      <a-sphere id='one' src='#ken' width='4' height='4' depth='4' rotation='0 -70 0' position='0 0 20' sound="src: jungle-run-01.mp3; autoplay: true">

        <a-animation attribute="position" to="0 5 0" direction="alternate" dur="2000" repeat="indefinite"></a-animation>

        <a-animation attribute="scale" begin="mouseenter" dur="300" to="2.3 2.3 2.3"></a-animation>

        <a-animation attribute="scale" begin="mouseleave" dur="300" to="2 2 2"></a-animation>

        <a-animation attribute="rotation" begin="click" dur="2000" to="360 405 45"></a-animation>

      </a-sphere>

      <a-sphere id='two' src='#max' width='8' height='8' depth='8' rotation='0 -75 0' position='20 0 -20' sound="src: ocean-waves-1.mp3; autoplay: true">

        <a-animation attribute="position" to="5 5 0" direction="alternate" dur="2000" repeat="indefinite"></a-animation>

        <a-animation attribute="scale" begin="mouseenter" dur="300" to="2.3 2.3 2.3"></a-animation>

        <a-animation attribute="scale" begin="mouseleave" dur="300" to="2 2 2"></a-animation>

        <a-animation attribute="rotation" begin="click" dur="2000" to="360 405 45"></a-animation>

      </a-sphere>

      <a-sphere id='three' src='#shambhavi' width='4' height='4' depth='4' rotation='0 -60 0' position='-20 0 -20' sound='src: baby-laughing-04.mp3; autoplay: true'>

        <a-animation attribute="position" to="-5 5 0" direction="alternate" dur="2000" repeat="indefinite"></a-animation>

        <a-animation attribute="scale" begin="mouseenter" dur="300" to="2.3 2.3 2.3"></a-animation>

        <a-animation attribute="scale" begin="mouseleave" dur="300" to="2 2 2"></a-animation>

        <a-animation attribute="rotation" begin="click" dur="2000" to="360 405 45"></a-animation>

      </a-sphere>

      <a-sky src='#skyTexture'></a-sky>

      <a-light type="ambient" color="#445451"></a-light>
      <a-light type="point" intensity="2" position="2 4 4"></a-light>

      <a-plane rotation='-90 0 0' width='30' height='30'></a-plane>
      <a-plane src="#groundTexture" rotation="-90 0 0" width="30" height="30" repeat='10 10'></a-plane>

      <a-camera>
        <a-cursor></a-cursor>
      </a-camera>

    </a-scene>
  </body>
</html>
